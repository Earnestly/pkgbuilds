pkgname=inter-ui
pkgver=3.7
pkgrel=1

pkgdesc='neo-grotesque sans-serif typeface'
url='https://rsms.me/inter/'
arch=('any')
license=('OFL')

group=('font')

depends=('fontconfig')

source=("https://github.com/rsms/inter/releases/download/v$pkgver/Inter-$pkgver.zip")
sha256sums=('0eb097467954991e109d179e22f06b11ef462e632dac5ce65633aa6e7262fa40')

pkgver() {
    curl -s https://api.github.com/repos/rsms/inter/releases/latest | jq -r '.name[1:]'
}

package() {
    install -Dm0644 -t "$pkgdir"/usr/share/fonts/cff/inter-ui 'Inter (OTF)'/*.otf
    install -Dm0644 LICENSE.txt "$pkgdir"/usr/share/licenses/inter-ui/LICENSE
}
